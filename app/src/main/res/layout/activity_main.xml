<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e4e8"
    tools:context="com.sodrover.calculateall.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tv_screen_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#000000"
        android:textAlignment="viewEnd"
        android:textColor="#ffffff"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/tv_screen_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#000000"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="42sp" />

    <RelativeLayout
        android:id="@+id/lo_button_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:id="@+id/lo_row1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#07b1ba"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="00" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="0" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="getResult"
                android:text="="
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_row2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@+id/lo_row1"
            android:layout_centerHorizontal="true"
            android:background="#07b1ba"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="addition"
                android:text="+"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_row3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@+id/lo_row2"
            android:layout_centerHorizontal="true"
            android:background="#07b1ba"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="5" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="6" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_row4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@+id/lo_row3"
            android:layout_centerHorizontal="true"
            android:background="#07b1ba"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="8" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="inputButton"
                android:text="9" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
